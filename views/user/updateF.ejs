<div class="container">
<h2>Update user profile <%= user.username %></h2>
	<form action="/user/update/<%= user.username %>" class="form-horizontal createForm" method="POST">
	<% if(flash && flash.err){ %>
	<ul class="alert alert-danger">
	<% Object.keys(flash.err).forEach(function(error){ %>
	<li><%- JSON.stringify(flash.err[error]) %></li>
	<% }) %>
	</ul>
	<% } %>
	<!-- 	<div class="form-group">
			<label for="username" class="col-sm-2 control-label">username</label>
			<div class="col-sm-10">
				<input type="text" value="<%= user.username %>" placeholder="type your name here..." id="username" class="col-sm-10 form-control" name="username">
			</div>
		</div> -->
		<div class="form-group">
			<label for="firstname" class="col-sm-2 control-label">First Name</label>
			<div class="col-sm-10">
				<input type="text" value="<%= user.firstname %>" id="firstname" class="form-control" name="firstname">
			</div>
		</div>
		<div class="form-group">
			<label for="lastname" class="col-sm-2 control-label" >Last Name</label>
			<div class="col-sm-10">
				<input type="text" value="<%= user.lastname %>" id="lastname" class="form-control" name="lastname">
			</div>
		</div>
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label" >E-mail</label>
			<div class="col-sm-10">
				<input type="email" value="<%= user.email %>" id="email" class="form-control" name="email">
			</div>
		</div>
		<div class="form-group">
			<label for="url" class="col-sm-2 control-label" >URL</label>
			<div class="col-sm-10">
				<input type="text" value="<%= user.url %>" id="url" class="form-control" name="url">
			</div>
		</div>
		<% if (req.session.access && req.session.User.admin){ %>
		<div class="form-group">
			<% if (user.admin){ %>
			<input type="hidden" name="adminProof" value="unchecked">
			<label class="col-sm-offset-2 col-sm-1">
				<input type="checkbox" name="adminToggle" checked/><span class="label label-success"> Admin</span>
			</label>
			<% }else{ %>
			<input type="hidden" name="adminProof" value="unchecked">
			<label class="col-sm-offset-2 col-sm-1">
				<input type="checkbox" name="adminToggle"/><span class="label label-success"> Admin</span>
			</label>
			<% } %>
		</div>
		<% } %>
